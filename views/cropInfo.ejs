<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <style>
    body {
      font-family: "Roboto", sans-serif;
    }

    body::-webkit-scrollbar {
      display: none; /* Chrome, Safari, and Opera */
    }
    .navbar-brand {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0;
    }
    .navbar-nav .nav-link {
      color: #ffffff !important;
      color: #ffffff !important;
      font-size: 1.3rem;
      font-weight: 400;
      margin-bottom: 0;
      padding-bottom: 0;
      margin-left: 1rem;
    }

    .navbar-nav .nav-link:hover {
      color: #0dfd24 !important;
    }
    /* Fixing image aspect ratio */
    .crop-image {
      object-fit: cover; /* Ensures the images fill the container without distorting */
      height: 200px; /* Fixed height for uniform image sizes */
    }

    /* Hover Effect */
    .card:hover {
      transform: scale(1.05); /* Slight zoom-in effect */
      transition: transform 0.3s ease-in-out;
    }

    /* Adding margin to the top of the section */
    .section1 {
      margin-top: 50px;
    }
    .button-last{
        margin:2rem 0
    }
    .main-container{    width: 68vw;
    padding: 5vh 4vw 2vh;
    border-radius: 2rem;
    box-shadow: #0000002b 4px 4px 20px 0px;
    }
    .crop-image{
        border-radius: 1rem;
    }
  </style>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <!-- Website Name (Left) -->
        <a class="navbar-brand h1" href="#">Harvest Horizon</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <!-- Navbar Links (Right) -->
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="/#about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="/#services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="/crops">Crops</a>
            </li>
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="/#contactus">Contact-Us</a>
            </li>
            <!-- Profile Icon (Right End) -->
            <li class="nav-item">
              <a class="nav-link h5 px-3" href="#">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  fill="currentColor"
                  class="bi bi-person-circle"
                  viewBox="0 0 16 16"
                >
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                  <path
                    fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                  />
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5 main-container">
      <div class="row">
        <!-- Left image column -->
        <div class="col-md-4">
          <div class="left">
            <img
              src="img/<%= crop.image %>"
              alt="<%= crop.name %>"
              class="img-fluid crop-image"
            />
          </div>
        </div>

        <!-- Right details column -->
        <div class="col-md-8">
          <div class="right">
            <h2><%= crop.name %></h2>
            <h5><%= crop.description %></h5>
            <h4>Type: <%= crop.type %></h4>
            <p>Scientific Name: <%= crop.scientificName %></p>
          </div>
        </div>
      </div>

      <div class="info mt-4">
        <h5 class="mt-4">Overview</h5>
        <p><%= crop.info.overview %></p>

        <h5 class="mt-4">Soil Requirements</h5>
        <ul class="list-unstyled">
          <% crop.info.soilRequirements.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Climate and Rainfall</h5>
        <ul class="list-unstyled">
          <% crop.info.climateAndRainfall.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Planting Methods</h5>
        <ul class="list-unstyled">
          <% crop.info.plantingMethods.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Water Management</h5>
        <ul class="list-unstyled">
          <% crop.info.waterManagement.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Fertilization</h5>
        <ul class="list-unstyled">
          <% crop.info.fertilization.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Pest and Disease Management</h5>
        <ul class="list-unstyled">
          <% crop.info.pestAndDiseaseManagement.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Harvesting</h5>
        <ul class="list-unstyled">
          <% crop.info.harvesting.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Post-Harvest Management</h5>
        <ul class="list-unstyled">
          <% crop.info.postHarvestManagement.forEach(function(item) { %>
          <li><%= item %></li>
          <% }); %>
        </ul>

        <h5 class="mt-4">Conclusion</h5>
        <p><%= crop.info.conclusion %></p>
      </div>

     
    </div>
<!-- Go Back Button Section -->
<div class="d-flex justify-content-center mt-4 button-last">
    <button type="button" class="btn btn-primary">
      <a href="/crops" class="text-white text-decoration-none">Go Back!!</a>
    </button>
  </div>
  
    <!-- Footer Section -->
    <footer class="footer bg-dark text-white py-4">
      <div class="container text-center">
        <p>&copy; 2024 Website Name. All rights reserved.</p>
        <p>
          <a href="#" class="text-white">Privacy Policy</a> |
          <a href="#" class="text-white">Terms of Service</a>
        </p>
      </div>
    </footer>
  </body>
</html>
