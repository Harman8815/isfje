    <section class="container mt-5 form">
        <form action="/predict" method="POST" class="border p-4 rounded shadow-sm bg-light">
            <h2 class="text-center mb-4">Prediction Form</h2>
    
            <div class="mb-3">
                <label for="Nitrogen" class="form-label">Nitrogen</label>
                <input type="number" id="Nitrogen" name="Nitrogen" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="P" class="form-label">P:</label>
                <input type="number" id="P" name="P" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="K" class="form-label">K:</label>
                <input type="number" id="K" name="K" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="temperature" class="form-label">Temperature:</label>
                <input type="number" id="temperature" name="temperature" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="humidity" class="form-label">Humidity:</label>
                <input type="number" id="humidity" name="humidity" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="ph" class="form-label">pH:</label>
                <input type="number" id="ph" name="ph" class="form-control" required step="any" />
            </div>
    
            <div class="mb-3">
                <label for="rainfall_In_mm" class="form-label">Rainfall (in mm):</label>
                <input type="number" id="rainfall_In_mm" name="rainfall_In_mm" class="form-control" required step="any" />
            </div>
    
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">Predict</button>
            </div>
        </form>
    </section>
    <!-- Go Back Button Section -->
<div class="d-flex justify-content-center mt-4 button-last">
    <button type="button" class="btn btn-primary">
      <a href="/" class="text-white text-decoration-none">Go Back!!</a>
    </button>
  </div>
